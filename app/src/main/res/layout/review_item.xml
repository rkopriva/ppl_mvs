<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/review_author_margin_bottom"
        android:layout_marginTop="@dimen/review_author_margin_top"
        android:textColor="@color/colorAuthorName"
        android:textStyle="bold"
        tools:text="John Doe"/>

    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/review_content_padding_left"
        tools:text="The movie is almost as good as Udacity learning videos"/>

</LinearLayout>